<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetData">

  <ScrollView
      android:id="@+id/scrollView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <TextView
          android:id="@+id/patient"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:scrollbars="vertical"
          android:text="@string/retrieving_data" />

      <TextView
          android:id="@+id/document"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/patient"
          android:scrollbars="vertical"
          android:text="@string/retrieving_data"
          android:textSize="20sp" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/allergiesSection"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Allergies and Intolerances"
            android:textColor="#000000"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TableLayout
              android:id="@+id/allergiesTable"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/immunizationTable"
              android:stretchColumns="1">

            <TableRow android:background="#ABB0B8">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="Crticality" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="Allergy" />
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#000000" />
          </TableLayout>
        </HorizontalScrollView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/problemSection"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Active Problems"
            android:textColor="#000000"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TableLayout
              android:id="@+id/problemsTable"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:stretchColumns="1">

            <TableRow android:background="#ABB0B8">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="Name" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="" />
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#000000" />
          </TableLayout>
        </HorizontalScrollView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/medicationSection"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Medications"
            android:textColor="#000000"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TableLayout
              android:id="@+id/medicationTable"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:stretchColumns="1">

            <TableRow android:background="#ABB0B8">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_weight="1"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="Name" />

              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="System" />
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
            android:background="#000000" />
          </TableLayout>
        </HorizontalScrollView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/immunizationSection"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Immunizations"
            android:textColor="#000000"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TableLayout
              android:id="@+id/immunizationTable"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:stretchColumns="1">

            <TableRow android:background="#ABB0B8">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="Date" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="Vaccine" />
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#000000" />
          </TableLayout>
        </HorizontalScrollView>
      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:id="@+id/resultsSection"
          android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Results"
            android:textColor="#000000"
            android:textSize="24sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

          <TableLayout
              android:id="@+id/resultsTable"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:stretchColumns="1">

            <TableRow android:background="#ABB0B8">
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="Date" />
              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="8dp"
                  android:gravity="left"
                  android:text="Name" />
            </TableRow>
            <View
                android:layout_width="match_parent"
                android:layout_height="5px"
                android:background="#000000" />
          </TableLayout>
        </HorizontalScrollView>
      </LinearLayout>

    </LinearLayout>
  </ScrollView>
</RelativeLayout>
